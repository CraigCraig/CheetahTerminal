root = true

[*.xml]
end_of_line = crlf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.csproj]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.cshtml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.cs]
end_of_line = crlf
indent_style = space
tab_width = 4
trim_trailing_whitespace = true

# IDE2000: Avoid multiple blank lines
dotnet_diagnostic.IDE2000.severity = warning
